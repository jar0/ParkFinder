<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jarek.parkingfinder.MainActivity">

    <com.example.jarek.parkingfinder.LogoView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:link="@string/www_parkhere_pl"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continueBtn">

        <Button
            android:id="@+id/singInBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="singInBtnClick"
            android:text="@string/logowanie"/>

        <Button
            android:id="@+id/singUpBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="singUpBtnClick"
            android:text="@string/rejestracja" />

    </LinearLayout>

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="continueBtnClick"
        android:text="@string/kontynuuj_bez_logowania"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
